<h1>Templates#new</h1>
<p>Find me in app/views/templates/new.html.erb</p>
<div class="wrapper">
	<div class="templateform">
		<%= render 'exercises/all_exercises' %>

		<div id="new_templates">
			<%= form_for (@template), {:class => "template_form"}  do |f| %>

			  <div class="field">
			    <%= f.label :name %><br />
			    <%= f.text_field :name, autofocus: true %>
			  </div>

				<div id="day1" class="day" data-day="1">
					Day 1
				</div>

				<div id="day2" class="day" data-day="2">
					Day 2
				</div>

				<div id="day3" class="day" data-day="3">
					Day 3
				</div>

				<div id="day4" class="day" data-day="4">
					Day 4
				</div>

				<div id="day5" class="day" data-day="5">
					Day 5
				</div>

			  <div class="actions">
			    <%= f.submit "Save", class: "btn" %>
			  </div>

			<% end %>
		</div>
	</div>
</div>